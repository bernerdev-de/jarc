<div class="popup closed" id="mkdir">
  <form class="main">
    <div class="header">
      <a onclick="closePopup('mkdir')">
        <svg style="width:24px;height:24px" viewBox="0 0 24 24">
          <path fill="currentColor"
            d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" />
        </svg>
      </a>
      <!--TODO: Fix the bug, that a single slash will be printed infront of the string -->
      <span>Adding folder to /{{rootFolder}}</span>
    </div>
    <div class="content">
      <label>
        Name: <input type="text" name="path" id="path" required>
      </label>
      <input type="hidden" id="rootPath" value="/{{rootFolder}}/">
      <label id="mkdir-error"></label>
    </div>
    <div class="action-buttons">
      <button type="submit">Add folder</button>
    </div>
  </form>

  <script src="/_static/js/popup_mkdir.js"></script>
</div>