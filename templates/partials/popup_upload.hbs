<div class="popup closed" id="upload">
  <form class="main" action="/upload/{{rootFolder}}" method="post" enctype="multipart/form-data">
    <div class="header">
      <a onclick="closePopup('upload')">
        <svg style="width:24px;height:24px" viewBox="0 0 24 24">
          <path fill="currentColor"
            d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" />
        </svg>
      </a>
      <span>Uploading to /{{rootFolder}}&zwnj;</span>
    </div>
    <div class="content">
      <input type="file" name="files" id="files" multiple>
      <label for="files" id="files-label"></label>
    </div>
    <div class="action-buttons">
      <button type="submit">Upload</button>
    </div>
  </form>

  <script src="/_static/js/popup_upload.js"></script>
</div>